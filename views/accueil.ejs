<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Mini Airbnb</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- Header -->
  <header>
    <div class="header-gauche">
      <a href="/">🏠 Accueil</a>
    </div>

    <div class="header-centre">
      <input type="text" id="recherche" placeholder="Rechercher un logement..." />
    </div>

    <div class="header-droite">
      <button id="btnFavoris">❤️ Favoris</button>
      <button>👤 Profil</button>
    </div>
  </header>

  <!-- Titre -->
  <h1>Liste des logements</h1>

  <!-- Logements -->
  <div class="logements">
    <% logements.forEach(logement => { %>
      <div class="logement" data-titre="<%= logement.titre.toLowerCase() %>">
        <img src="<%= logement.image %>" alt="<%= logement.titre %>">
        <h2>
          <a href="/logement/<%= logement.id %>"><%= logement.titre %></a>
          <span class="coeur" data-id="<%= logement.id %>">♡</span>
        </h2>
        <p><%= logement.prix %> €/nuit</p>
      </div>
    <% }); %>
  </div>

  <script src="/script.js"></script>
</body>
</html>
